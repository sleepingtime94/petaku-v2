{% extends "layout.twig" %} {% block content %}
<div class="container">
  <div class="d-flex justify-content-center p-5 form-register">
    <div class="col-md-6">
      <form id="register">
        <div class="row">
          <div class="col-md-12">
            <div class="alert alert-info">Mohon maaf, saat ini menu pendaftaran akun ditutup sementara.</div>
            <div class="mb-4">
              <div class="fs-4 fw-bold">Buat Akun</div>
              <div class="text-secondary small">
                Masukkan nama pengguna, kata sandi, email, dan nomor telepon
                yang aktif.
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="username">Nama Pengguna</label>
              <input type="text" id="username" name="username" class="form-control" autocomplete="off" disabled />
            </div>
            <div class="mb-3">
              <label for="password">Kata Sandi</label>
              <input type="password" id="password" name="password" class="form-control" disabled />
            </div>
            <div class="mb-3">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" autocomplete="off" disabled />
            </div>
            <div class="mb-3">
              <label for="phone">Nomor Telepon</label>
              <input type="text" id="phone" name="phone" class="form-control" autocomplete="off" disabled />
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="username">Nama Instansi</label>
              <input type="text" class="form-control" id="gov-name" name="gov_name" autocomplete="off" disabled />
            </div>
            <div class="mb-3">
              <label for="username">Nama Lengkap</label>
              <input type="text" class="form-control" id="gov-leader" name="gov_leader" autocomplete="off" disabled />
            </div>
            <div class="mb-3">
              <label for="username">Jabatan</label>
              <input type="text" class="form-control" id="gov-position" name="gov_position" autocomplete="off"
                disabled />
            </div>
            <div class="mb-3">
              <label for="username">Kontak Person</label>
              <input type="text" class="form-control" id="gov-contact" name="gov_contact" autocomplete="off" disabled />
            </div>
          </div>
          <div class="col-md-12">
            <div class="mb-3">
              <div class="required mb-2">Surat Tugas (format .pdf, maks. 2 MB)</div>
              <div class="input-group mb-1">
                <input type="file" class="form-control rounded-0" id="file-upload" accept="application/pdf" required
                  disabled />
                <input type="hidden" id="temp-file" name="document" />
              </div>
              <div class="progress" style="height: 10px">
                <div id="progressBar" class="progress-bar progress-bar-animated bg-primary progress-bar-striped"
                  role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>
            <div class="form-floating mb-4">
              <textarea id="gov-address" name="gov_address" class="form-control" style="height: 100px"
                disabled></textarea>
              <label for=" username">Alamat Kantor</label>
            </div>
            <div class="form-check small mb-3">
              <input class="form-check-input" type="checkbox" name="agree" value="1" id="flexCheckChecked" checked />
              <label class="form-check-label" for="flexCheckChecked">
                Dengan mendaftar saya menyetujui syarat dan ketentuan yang
                berlaku.
              </label>
            </div>
            <button class="btn btn-default btn-lg w-100" type="submit" disabled>
              Mendaftar
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/assets/js/register.js"></script>
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
{% endblock %}