{% extends "layout.twig" %} {% block content %}
<div class="box-menu-agregat">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <div class="fs-5 p-3">Kategori</div>
        <div id="list-category" class="list-group">
          <a class="list-group-item list-group-item-action active" data-bs-toggle="list" id="jumlah-penduduk"
            aria-label="Jumlah Penduduk">
            <i class="bi bi-people-fill me-2"></i>
            Jumlah Penduduk
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="kepala-keluarga"
            aria-label="Kepala Keluarga">
            <i class="bi bi-people me-2"></i>
            Kepala Keluarga
          </a>
          {% if userLevel == 1 or userLevel == 3 %}
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="ktp" aria-label="KTP Elektronik">
            <i class="bi bi-person-vcard-fill me-2"></i>
            KTP Elektronik
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="kia"
            aria-label="Kartu Identitas Anak">
            <i class="bi bi-person-vcard me-2"></i>
            Kartu Identitas Anak
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="akta-kelahiran"
            aria-label="Akta Kelahiran">
            <i class="bi bi-person-rolodex me-2"></i>
            Akta Kelahiran
          </a>
          {% endif %}
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="pendidikan"
            aria-label="Pendidikan">
            <i class="bi bi-book me-2"></i>
            Pendidikan
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="pekerjaan" aria-label="Pekerjaan">
            <i class="bi bi-tools me-2"></i>
            Pekerjaan
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="golongan-darah"
            aria-label="Golongan Darah">
            <i class="bi bi-droplet-fill me-2"></i>
            Golongan Darah
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="status-kawin"
            aria-label="Status Kawin">
            <i class="bi bi-hearts me-2"></i>
            Status Kawin
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="shbkel" aria-label="SHBKEL">
            <i class="bi bi-highlighter me-2"></i>
            SHBKEL
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="agama" aria-label="Agama">
            <i class="bi bi-filter me-2"></i>
            Agama
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="kelompok-umur"
            aria-label="Kelompok Umur">
            <i class="bi bi-percent me-2"></i>
            Kelompok Umur
          </a>
          <a class="list-group-item list-group-item-action" data-bs-toggle="list" id="disabilitas"
            aria-label="Disabilitas">
            <i class="bi bi-person-wheelchair me-2"></i>
            Disabilitas
          </a>
        </div>
      </div>
      <div class="col-md-4">
        <div class="fs-5 p-3">Wilayah</div>
        {% if userLevel == 3 %}
        <div id="list-area" data-area="{{ codeArea }}" class="list-group"></div>
        {% else %}
        <div class="form-floating mb-3">
          <input type="text" id="search-area" class="form-control rounded-0" placeholder="wilayah">
          <label for="search-area">CARI WILAYAH</label>
        </div>
        <ul id="search-area-result" class="dropdown-menu"></ul>
        <div id="list-area" class="list-group"></div>
        {% endif %}
      </div>
      <div class="col-md-5">
        <div class="fs-5 p-3">Data Agregat</div>
        <div class="data-agregat">
          <div class="mb-2">
            <div class="text-uppercase px-3 d-flex justify-content-between align-items-center">
              <div>
                <span id="list-data-category">JUMLAH PENDUDUK</span>
                <span class="mx-2 small">/</span>
                <span id="list-data-area">KABUPATEN TAPIN</span>
              </div>
              <div>
                {% if authToken and userLevel != 0 %}
                <button class="btn btn-link text-decoration-none text-default" id="download-data">
                  <i class="bi bi-floppy"></i> SIMPAN DATA</button>
                {% endif %}
              </div>
            </div>
          </div>

          <div id="list-data-agregat" class="list-group list-group-flush"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="fixed-bottom progress" style="height: 3px">
  <div id="progressBar" class="progress-bar progress-bar-animated bg-default" role="progressbar" aria-valuenow="0"
    aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
</div>

<script src="/assets/js/agregat.js"></script>
{% endblock %}