{% extends "layout.twig" %} {% block content %}
<div class="container">
  <div class="d-flex justify-content-center p-5 form-login">
    <div class="col-md-4">
      <div class="mb-3">
        <div class="fs-4 fw-bold mb-2">Akses Menu</div>
        <div class="notification">
          <div class="small alert alert-primary alert-dismissible fade show">
            Silahkan isi nama pengguna & kata sandi.
          </div>
        </div>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="form-input-username" placeholder="Username" autocomplete="off" />
        <label for="username"> Nama Pengguna </label>
      </div>
      <div class="form-floating mb-3">
        <input type="password" class="form-control" id="form-input-password" placeholder="Password" />
        <label for="password"> Kata Sandi </label>
      </div>
      <div class="cf-turnstile" data-sitekey="0x4AAAAAAAxIWsiF6U_ZjVcx"></div>
      <div class="mt-3">
        <button class="btn btn-default w-100" id="btn-login">Masuk</button>
      </div>
    </div>
  </div>
</div>

<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
<script src="/assets/js/login.js"></script>
{% endblock %}